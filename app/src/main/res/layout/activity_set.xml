<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:orientation="vertical"
    tools:context=".SetActiv">

    <LinearLayout
        android:id="@+id/MenuSet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TitleSetT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:text="Setting"
            android:textColor="#FB8C00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BackBMenu"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="#FF9A00"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/L1S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/line2S"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:src="@android:color/holo_orange_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SETS"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/COLOR_FR_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="Color Graph Frequency"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ColorFr_G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="true"
                    android:text="Green"
                    android:textColor="#FAFFFFFF" />

                <RadioButton
                    android:id="@+id/ColorFr_Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="false"
                    android:text="Yallow"
                    android:textColor="#FAFFFFFF" />

                <RadioButton
                    android:id="@+id/ColorFr_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="false"
                    android:text="Red"
                    android:textColor="#FAFFFFFF" />

                <RadioButton
                    android:id="@+id/ColorFr_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="false"
                    android:text="Blue"
                    android:textColor="#FAFFFFFF" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/COLOR_TR_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="Color Graph Trais"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ColorTr_G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="false"
                    android:text="Green"
                    android:textColor="#FAFFFFFF" />

                <RadioButton
                    android:id="@+id/ColorTr_Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="true"
                    android:text="Yallow"
                    android:textColor="#FAFFFFFF" />

                <RadioButton
                    android:id="@+id/ColorTr_R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="false"
                    android:text="Red"
                    android:textColor="#FAFFFFFF" />

                <RadioButton
                    android:id="@+id/ColorTr_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#FF6D00"
                    android:checked="false"
                    android:text="Blue"
                    android:textColor="#FAFFFFFF" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/SFG_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Show Frequency Graph"
                android:textColor="#FFFFFF"
                android:thumbTint="#FF6D00"
                android:trackTint="#FFAB00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/STG_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Show Trace Graph"
                android:textColor="#FFFFFF"
                android:thumbTint="#FF6D00"
                android:trackTint="#FFAB00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/Grnter_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Graphic Interactive"
                android:textColor="#FFFFFF"
                android:thumbTint="#FF6D00"
                android:trackTint="#FFAB00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MLT_T"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Maximum Length Trais"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/MLT"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:thumbTint="#FF6D00" />

            <TextView
                android:id="@+id/MLT_I"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MPT_T"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Maximum Рeight Trais"
                android:textColor="#FFFFFF" />

            <SeekBar
                android:id="@+id/MPT"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:thumbTint="#FF6D00" />

            <TextView
                android:id="@+id/MPT_I"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="0"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BACKGS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AdvancedBS"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9A00"
            android:text="Advanced"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/DefaultBS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9A00"
            android:text="default"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/SaveBBS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9A00"
            android:text="Save"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/L2S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/LineS"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:src="@android:color/holo_orange_dark" />
    </LinearLayout>

</LinearLayout>